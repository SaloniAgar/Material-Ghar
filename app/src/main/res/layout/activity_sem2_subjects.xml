<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".sem2.Sem2SubjectsActivity">

    <TextView
        android:id="@+id/text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:text="Select Subject"
        android:layout_centerHorizontal="true"
        android:textSize="24sp"
        android:textColor="#000"
        android:textStyle="bold" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/text1">

        <GridLayout
            android:id="@+id/g2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:rowCount="3"
            android:columnCount="2"
            android:minWidth="400dp"
            android:layout_margin="5dp">

            <Button
                android:id="@+id/btnMaths2"
                android:layout_width="150dp"
                android:layout_height="180dp"
                android:layout_margin="25dp"
                android:text="Discreate Mathematical Structure"
                android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                android:textColor="#fff"
                android:textSize="18sp"
                android:background="#050B32"/>

            <Button
                android:id="@+id/btnComSys"
                android:layout_width="150dp"
                android:layout_height="180dp"
                android:layout_margin="25dp"
                android:text="Communication Systems"
                android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                android:textColor="#fff"
                android:textSize="18sp"
                android:background="#050B32"/>

            <Button
                android:id="@+id/btnPDW"
                android:layout_width="150dp"
                android:layout_height="180dp"
                android:layout_margin="25dp"
                android:text="Pulse ,digital and wave shaping"
                android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                android:textColor="#fff"
                android:textSize="18sp"
                android:background="#050B32"/>

            <Button
                android:id="@+id/btnDSA"
                android:layout_width="150dp"
                android:layout_height="180dp"
                android:layout_margin="25dp"
                android:text="Data Structure and Algorithm"
                android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                android:textColor="#fff"
                android:textSize="18sp"
                android:background="#050B32"/>

            <Button
                android:id="@+id/btnCOA"
                android:layout_width="150dp"
                android:layout_height="180dp"
                android:layout_margin="25dp"
                android:text="Computer Organization and Architecture"
                android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                android:textColor="#fff"
                android:textSize="18sp"
                android:background="#050B32"/>



            <Button
                android:id="@+id/btnUnix"
                android:layout_width="150dp"
                android:layout_height="180dp"
                android:layout_margin="25dp"
                android:text="Unix and Shell Programming"
                android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                android:textColor="#fff"
                android:textSize="18sp"
                android:background="#050B32"/>

            <Button
                android:id="@+id/btnJava"
                android:layout_width="150dp"
                android:layout_height="180dp"
                android:layout_margin="25dp"
                android:text="Programming with Java"
                android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                android:textColor="#fff"
                android:textSize="18sp"
                android:background="#050B32"/>

        </GridLayout>

    </ScrollView>

</RelativeLayout>