<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".sem1.Sem1PapersActivity">

    <TextView
        android:id="@+id/text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:text="Select Year"
        android:layout_centerHorizontal="true"
        android:textSize="24sp"
        android:textColor="#000"
        android:textStyle="bold" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/text1">

        <GridLayout
            android:id="@+id/g3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:rowCount="3"
            android:columnCount="2"
            android:minWidth="400dp"
            android:layout_margin="5dp">

            <Button
                android:id="@+id/btn1415"
                android:layout_width="150dp"
                android:layout_height="180dp"
                android:layout_margin="25dp"
                android:text="2014-2015"
                android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                android:textColor="#fff"
                android:textSize="18sp"
                android:background="#050B32"/>

            <Button
                android:id="@+id/btn1516"
                android:layout_width="150dp"
                android:layout_height="180dp"
                android:layout_margin="25dp"
                android:text="2015-2016"
                android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                android:textColor="#fff"
                android:textSize="18sp"
                android:background="#050B32"/>

            <Button
                android:id="@+id/btn1617"
                android:layout_width="150dp"
                android:layout_height="180dp"
                android:layout_margin="25dp"
                android:text="2016-2017"
                android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                android:textColor="#fff"
                android:textSize="18sp"
                android:background="#050B32"/>

            <Button
                android:id="@+id/btn1718"
                android:layout_width="150dp"
                android:layout_height="180dp"
                android:layout_margin="25dp"
                android:text="2017-2018"
                android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                android:textColor="#fff"
                android:textSize="18sp"
                android:background="#050B32"/>

            <Button
                android:id="@+id/btn1819"
                android:layout_width="150dp"
                android:layout_height="180dp"
                android:layout_margin="25dp"
                android:text="2018-2019"
                android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                android:textColor="#fff"
                android:textSize="18sp"
                android:background="#050B32"/>


        </GridLayout>

    </ScrollView>


</RelativeLayout>